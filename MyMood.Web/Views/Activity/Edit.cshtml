@model MyMood.Web.Models.EditActivityModel

@using (Html.BeginForm(MVC.Activity.ActionNames.Save, MVC.Activity.Name)) 
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(m => m.EventId)
    @Html.HiddenFor(m => m.Id)

    <div>
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title)
        @Html.ValidationMessageFor(m => m.Title)
    </div>
        
    <div>
        @Html.LabelFor(m => m.TimeStamp)
        @Html.EditorFor(m => m.TimeStamp)
        @Html.ValidationMessageFor(m => m.TimeStamp)
    </div>
        
}

